@model EmpMan.ViewModel.FinancialVMs.FinancialBatchVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <div style="margin-bottom:10px">@Localizer["Sys.BatchEditConfirm"] </div>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:textbox field="LinkedVM.date" />
<wt:combobox field="LinkedVM.Gender" />
<wt:textbox field="LinkedVM.Money" />
<wt:textbox field="LinkedVM.UseFor" />
<wt:textbox field="LinkedVM.Notes" />
</wt:row>
    <wt:hidden field="Ids" />
    <wt:grid vm="ListVM" use-local-data="true" height="300"  hidden-checkbox="true" hidden-panel="true"/>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
